<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_two_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.decagon.lifecycletask.FragmentActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_add_fragment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/fragment_color"
            android:text="@string/add_fragment"
            android:textColor="@android:color/black"


            />

        <Button
            android:id="@+id/btn_remove_fragment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/fragment_color"
            android:text="@string/remove_fragment"
            android:textColor="@android:color/widget_edittext_dark"


            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp" />

</LinearLayout>